{
  "name": "proximity-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "pm2 start dist/index.js -i 2 --name=\"grad-api\" --no-daemon",
    "start:dev": "ts-node-dev /src/index.ts",
    "dev": "nodemon -L /src/index.ts",
    "start:debug": "node --inspect-brk src/index.ts",
    "app:reload": "pm2 reload all",
    "build": "tsc",
    "test": "jest --watchAll --no-cache",
    "test:ci": "jest",
    "test:coverge": "jest --coverage",
    "lint": "eslint --ignore-path .eslintignore  --ext src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@commitlint/types": "^17.4.4",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.5",
    "@types/node": "^20.5.9",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.48.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "nodemon": "^3.0.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@types/hpp": "^0.2.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "helmet": "^7.0.0",
    "hpp": "^0.2.3",
    "morgan": "^1.10.0",
    "passport": "^0.6.0",
    "pm2": "^5.3.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.10.0"
  },
  "lint-staged": {
    "*.ts": [
      "npx eslint --fix"
    ]
  }
}
